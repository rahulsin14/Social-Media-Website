
        <h1>
            Codeial / <%= title %>
        </h1>
        <section id="feed-posts">
            <h4>Posts</h4>
            <form action="/posts/create" id="new-post-form" method="Post">
                <textarea name="content" cols="30" rows="3" required></textarea>
                <input type="submit" value="Post">
            </form>
            <div id="post-list-container">
                <ul>
                    <% if(locals.user){%>
                <% for(post of posts){%>
                    <li>
                        <p>
                        <%=post.content%><br>
                        <%=post.user.name%>
                        </p>
                        <% if(locals.user && locals.user.id==post.user.id){%>
                        <a href="/posts/destroy/<%=post.id%>">||</a>
                        <%}%>
                        <div class="posts-container">
                            <% if(locals.user){%>
                                <form action="/comments/create" method="POST">
                                    <input type="text" name="content" placeholder="type comment" required>
                                    <input type="hidden" name="post" value="<%=post._id%>">
                                    <input type="submit" value="Add Comment"> 
                                </form>
                            <%}%>
                            <div id="post-list-container">
                                <ul id="post-comments-<%=post._id%>">
                                <% for(comment of post.comments){%>
                                    <li>
                                        <p>
                                        <%=comment.content%><br>
                                        <%=comment.user.name%>
                                        </p>
                                        <% if(locals.user && (locals.user.id==comment.user.id || locals.user.id==post.user.id)){%>
                                            <a href="/comments/destroy/<%=comment.id%>">||</a>
                                        <%}%>
                                    </li>
                                    <%}%>
                                </ul>
                            </div>
                        </div>
                    </li>
                <%}%>
                <%}%>
                </ul>
            </div>
        </section>
